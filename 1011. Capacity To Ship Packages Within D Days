class Solution {
    public int shipWithinDays(int[] w, int d) {
        int l = 0, r = 0;
        for (int x : w) { l = Math.max(l, x); r +=x;}
        while ( l < r) {
            int m = (l + r)/ 2, days = 1, curr = 0;
            for (int x : w)
                if((curr += x) > m) { days++; curr = x; }
            if ( days > d) l = m + 1;
            else r = m;
        }
        return l;
        
    }
}

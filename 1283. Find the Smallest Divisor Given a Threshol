class Solution {
    public int smallestDivisor(int[] a, int t) {
        int l = 1, r = 0;
        for (int x : a) r = Math.max(r, x);
        while (l < r) {
            int m = (l + r) / 2, s = 0;
            for (int x : a) s += (x + m - 1) / m;
            if (s > t) l = m + 1;
            else r = m;
        }
        return l;
    }
}

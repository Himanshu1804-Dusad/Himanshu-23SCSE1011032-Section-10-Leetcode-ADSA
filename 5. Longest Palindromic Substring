class Solution {
    public String longestPalindrome(String s) {
        String res = "";
        for (int i = 0; i < s.length(); i++) {
            res = get(s, i, i, res);
            res = get(s, i, i + 1, res);
        }
        return res;
    }

    String get(String s, int l, int r, String res) {
        while (l >= 0 && r < s.length() && s.charAt(l) == s.charAt(r)) {
            if (r - l + 1 > res.length()) res = s.substring(l, r + 1);
            l--; r++;
        }
        return res;
    }
}

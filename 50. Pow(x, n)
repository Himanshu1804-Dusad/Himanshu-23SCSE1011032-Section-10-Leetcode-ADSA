class Solution {
    public double myPow(double x, int n) {
        return pow(x,n);
    }
    private double pow(double x, long n){
        if (n == 0) return 1;
        if  (n < 0) return pow(1 / x, -n);
        double half = pow  (x, n/2);
        return n %  2 == 0 ? half * half : half * half * x;
    }
}

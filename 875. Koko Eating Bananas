class Solution {
    public int minEatingSpeed(int[] p, int h) {
        int l = 1, r = 1_000_000_000;
        while (l < r) {
            int m = (l + r) / 2, t = 0;
            for (int x : p) t += (x + m - 1) / m;
            if (t > h) l = m + 1;
            else r = m;
        }
        return l;
    }
}
